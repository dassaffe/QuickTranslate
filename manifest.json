{
  "manifest_version": 2,
  "name": "QuickTranslate",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery.min.js",
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "style.css"
  ],
  "background": {
    "scripts": [
      "background.js",
      "jquery.min.js"
    ]
  },
  "browser_action": {
    "default_icon": "logo.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus"
  ]
}